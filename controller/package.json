    "@kubernetes/client-node": "^0.18.1",
    "apollo-server": "^3.6.1",
    "apollo-server-express": "^3.10.0",
    "dockerode": "^3.3.5",
    "dotenv": "^16.0.3",
    "expiry-map": "^2.0.0",
    "express": "^4.18.2",
